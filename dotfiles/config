# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#####MODES
#mode resize for windows
#
set $master "Master Modes"

mode $master {

	### VARS	
	set $chrome "Chrome"
	set $audio "Audio"
	set $resize "Resize"
	set $code "Code"
	set $monitors "Monitors"
	set $return_master_mode bindsym Return mode "Master Modes"
	set $return_default bindsym Escape mode "default"
	
	#Binds all modes to a key stroke for easy access to all of them
	bindsym r mode $resize 
	bindsym a mode $audio 
	bindsym g mode $chrome
	bindsym c mode $code
	bindsym m mode $monitors

	#Back to default mode
	$return_default
}

mode $resize {
        # These bindings trigger as soon as you enter the resize mode

	# Preset sizes for windows
	
	# Skinny terminal
	bindsym Shift+t floating enable resize set 1050 200

	# Full terminal
	bindsym t floating enable resize set 1050 650

	# Full Window
	bindsym w floating enable resize set 1280 720

	# Small Window
	bindsym Shift+w floating enable resize set 650 500

	# Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 130 px or 130 ppt
        bindsym j resize grow height 130 px or 130 ppt
        bindsym k resize shrink height 130 px or 130 ppt
        bindsym l resize grow width 130 px or 130 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
	$return_master_mode
	$return_default
}

mode $audio {

	###VARS
	set $vucontrol exec pavucontrol
	set $paeffects exec pulseeffects

	#Audio master control mode
	bindsym v $vucontrol
	bindsym e $paeffects
	bindsym XF86AudioLowerVolume exec $fx86VolDown
	bindsym XF86AudioRaiseVolume exec $fx86VolUp

	#Escape to default	
	$return_master_mode
	$return_default
}

mode $chrome {
	####VARS
	set $chrome_exec google-chrome-stable --force-device-scale-factor=1 --high-dpi-support=1 --new-window

	#Chrome mode for interacting with google chrome
	bindsym g exec "$chrome_exec"
	bindsym y exec "$chrome_exec  www.youtube.com" 
	bindsym q exec "$chrome_exec https://cbord-horizon.atlassian.net/jira/servicedesk/projects/DEVOPS/queues/custom/39 https://cbord.tribridgecloud.com/main.aspx"
	bindsym m exec "$chrome_exec https://cbord-horizon.atlassian.net/wiki/spaces/Development/pages/40581207/Odyssey+Direct+Runbook"
	bindsym t exec "$chrome_exec teams.microsoft.com"
	bindsym o exec "$chrome_exec outlook.com"

	#show a helpful tooltip that lists the currently assigned webpages
	set $list_script "~/.config/i3/google_help.sh"
	bindsym $mod+h exec $list_script 

	#Escape to default	
	$return_master_mode
	$return_default
}

mode $code {
	#### VARS
	
	#Keybindings
	bindsym c exec vscode

	#Escape to default	
	$return_master_mode
	$return_default

}

mode $monitors {
	###VARS
	set $work_monitor_setup "~/.config/i3/xrandr-mon-work.sh"
        set $home_monitor_setup "~/.config/i3/home-xrandr-setup.sh" 


	###Keybindings
	bindsym w exec $work_monitor_setup
	bindsym h exec $home_monitor_setup


	#Escape to default	
	$return_master_mode
	$return_default
	
}

####MODE CALLS

bindsym $mod2+space mode $master

