##global gaps setting
set $inner_gaps_10 gaps inner current  set 10
set $outer_gaps_10 gaps outer current set 10
set $outer_gaps_0 gaps outer current set 0
# switch to workspace
bindsym $mod+1 workspace $ws1 $inner_gaps_10;
bindsym $mod+2 workspace $ws2 $inner_gaps_10;
bindsym $mod+3 workspace $ws3; 
bindsym $mod+4 workspace $ws4 $inner_gaps_10;
bindsym $mod+5 workspace $ws5 $inner_gaps_10;
bindsym $mod+6 workspace $ws6 $inner_gaps_10;
bindsym $mod+9 workspace $ws9;

