#!/bin/bash
#Enter comments for functionality here
home="${BASH_SOURCE[0]%/*}"

#Declare a variable array for args
arg1="$1"
arg2="$2"


function head_function() {
	local function_name="$1"
	head -2 "$home/$function_name"
}

function list_bin() {
	local bin="$1"
	ls -Ll $bin --color=auto
}


case $arg1 in
"-l")
  head_function $arg2
  ;;
*)
  list_bin $home
esac



